<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AntiqueWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/background111">


                <Button
                    android:id="@+id/qr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="192dp"
                    android:layout_weight="1"
                    android:background="@drawable/qr"
                    android:backgroundTint="#FEB159" />

                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="127dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/AliceBlue"
                    android:backgroundTint="@color/Azure" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="165dp"
                    android:layout_marginLeft="-112dp"
                    android:layout_marginTop="202dp"
                    android:layout_toRightOf="@id/pic"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="TextView"
                    android:textColor="@color/Seashell"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-124dp"
                    android:layout_marginLeft="-187dp"
                    android:layout_marginTop="229dp"
                    android:layout_toEndOf="@id/name"
                    android:layout_toRightOf="@id/pic"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="TextView"
                    android:textColor="@color/Seashell"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profile"
                    android:layout_width="61dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="33dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/user" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="56dp"
                    android:layout_height="53dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="308dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="47dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/logout" />

                <Button
                    android:id="@+id/addMoment"
                    android:layout_width="81dp"
                    android:layout_height="63dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="151dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/story" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="29dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/plus" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="153dp"
                    android:layout_marginTop="88dp"
                    android:text="Add Moment" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="312dp"
                    android:layout_marginTop="85dp"
                    android:text="Logout" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="41dp"
                    android:layout_marginTop="88dp"
                    android:text="Profile" />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moment"
                android:layout_width="match_parent"
                android:layout_height="477dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>